genrule(
    name = "iso",
    outs = ["kestrel.iso"],
    cmd = "./$(location build_iso.bash) $(location :limine.cfg) $(location :kestrel.iso) $(location //kestrel) $(locations @limine//:limine_artifacts)",
    tools = [
        "build_iso.bash",
        "limine.cfg",
        "//kestrel",
        "@limine//:limine_artifacts",
    ],
)

sh_binary(
    name = "emulator",
    srcs = ["run_iso.bash"],
    data = [":iso"],
)
